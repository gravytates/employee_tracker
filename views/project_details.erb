
<br>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3><%= @project.name %></h3>
      <form action="/project/update/<%= @project.id %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <label>update name:</label>
        <input name="project-name" type="text">
        <br>
        <button type="submit" class="btn btn-info" name="button">update project</button>
      </form>
      <br>
      <form action="/project/delete/<%= @project.id %>" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" class="btn btn-warning" name="button">delete project</button>
      </form>
      <br>
      <a href="/" class="btn btn-success">home</a>
    </div>
    <div class="col-md-6">
      <h3>Add employee to a department</h3>
        <% if @employees.any? %>

        <form action="/project/<%= @project.id %>/add_employees" method="post">
          <input type="hidden" name="_method" value="patch">
            <label>Select an employee</label>
            <br>
              <% @employees.each do |employee| %>
                <label>
                    <input type="checkbox" name="employee_ids[]" value="<%= employee.id %>"><%= employee.name %>
                </label><br>
              <% end %>
          <br><br>
          <button class="btn btn-info" type="submit">assign to this project</button>
        </form>
        <% end %>
        <br>
        <h3>Employees currently assigned to this project</h3>
        <% if @project.employees.any? %>
          <% @project.employees.each do |e| %>
            <li><%= e.name %></li>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
